{
  "name": "branch2ports",
  "version": "0.1.0",
  "description": "A CLI tool that dynamically generates port numbers based on repository and branch names",
  "main": "dist/index.js",
  "bin": {
    "branch2ports": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "git",
    "worktree",
    "ports",
    "development",
    "docker"
  ],
  "author": "chaspy",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chaspy/branch2ports.git"
  }
}
